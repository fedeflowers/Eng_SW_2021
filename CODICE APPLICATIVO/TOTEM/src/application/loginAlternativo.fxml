<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ControllerLoginRoot">
   <center>
      <BorderPane prefHeight="200.0" prefWidth="811.0" BorderPane.alignment="CENTER">
         <center>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="user" promptText="username">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="80.0" />
                     </HBox.margin>
                  </TextField>
                  <PasswordField fx:id="paswd" promptText="password">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="80.0" />
                     </HBox.margin>
                  </PasswordField>
                  <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#LogIn" text="Log In">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="80.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <BorderPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </BorderPane.margin>
            </HBox>
         </center>
         <bottom>
            <Text fx:id="TextError" fill="#eb0e1d" strokeType="OUTSIDE" strokeWidth="0.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="40.0" />
               </BorderPane.margin></Text>
         </bottom>
         <top>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="LOGIN ROOT (solo addetti)" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets top="30.0" />
               </BorderPane.margin>
            </Text>
         </top>
      </BorderPane>
   </center>
   <bottom>
      <Button fx:id="back" mnemonicParsing="false" onAction="#back" text="Back" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin></Button>
   </bottom>
</BorderPane>
